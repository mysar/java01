<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>

        <!--连接数据库必要参数-->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernate</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>

        <!--方言-->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!--修改数据库的隔离级别-->
        <!--<property name="connection.isolation">8</property>-->

        <!--数据库连接池-->
        <property name="c3p0.max_size">10</property>
        <property name="c3p0.min_size">5</property>
        <property name="c3p0.timeout">5000</property>
        <property name="c3p0.max_statements">100</property>
        <property name="c3p0.idle_test_period">3000</property>
        <property name="c3p0.acquire_increment">2</property>
        <property name="c3p0.validate">false</property>

        <!--将生成的SQL显示在控制台上-->
        <property name="show_sql">true</property>
        <!--将当前的session绑定到线程上-->
        <property name="current_session_context_class">thread</property>
        <!--开启二级缓存-->
        <property name="cache.use_second_level_cache">true</property>
        <!--选择二级缓存的实现类-->
        <property name="cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>


        <!--注册hbm映射文件-->
        <mapping class="cn.wasis.pojo.annotation.Account"/>
        <mapping class="cn.wasis.pojo.annotation.Customer"/>
        <mapping class="cn.wasis.pojo.annotation.User"/>
        <mapping class="cn.wasis.pojo.annotation.Address"/>
        <mapping class="cn.wasis.pojo.annotation.Student"/>
        <mapping class="cn.wasis.pojo.annotation.Teacher"/>
        <mapping class="cn.wasis.pojo.annotation.Post"/>
        <mapping class="cn.wasis.pojo.annotation.PostContent"/>
        <mapping class="cn.wasis.pojo.annotation.Card"/>
        <mapping class="cn.wasis.pojo.annotation.Person"/>


        <!--<mapping resource="hbm/Account.hbm.xml"/>
        <mapping resource="hbm/User.hbm.xml"/>
        <mapping resource="hbm/Address.hbm.xml"/>
        <mapping resource="hbm/Student.hbm.xml"/>
        <mapping resource="hbm/Teacher.hbm.xml"/>
        <mapping resource="hbm/Card.hbm.xml"/>
        <mapping resource="hbm/Person.hbm.xml"/>
        <mapping resource="hbm/Post.hbm.xml"/>
        <mapping resource="hbm/PostContent.hbm.xml"/>
        <mapping resource="hbm/Customer.hbm.xml"/>-->

    </session-factory>
</hibernate-configuration>